<UserControl x:Class="VisualNovelManagerv2.Pages.Links.Settings.LinksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:local="clr-namespace:VisualNovelManagerv2.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="{StaticResource RootMargin}">
        <Grid Style="{StaticResource ContentRoot}" Margin="10,10,10,35">
            <mui:ModernTab Layout="List" SelectedSource="../../../Pages/Links/Settings/Appearance.xaml">
                <mui:ModernTab.Links>
                    <mui:Link DisplayName="Appearance" Source="../../../Pages/Links/Settings/Appearance.xaml"/>
                    <mui:Link DisplayName="Settings" Source="../../../Pages/Links/Settings/UserSettings.xaml"/>
                </mui:ModernTab.Links>
            </mui:ModernTab>
        </Grid>
        <local:BottomStatusBar/>
    </Grid>
</UserControl>
