<UserControl x:Class="VisualNovelManagerv2.Pages.Links.About.FullText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualNovelManagerv2.Pages.Links.About"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="{StaticResource RootMargin}">
        <Grid>
            <mui:ModernTab  Layout="List">
                <mui:ModernTab.Links>
                    <mui:Link DisplayName="MIT" Source="../../../Pages/Links/About/LicenseText/MIT.xaml"/>
                    <mui:Link DisplayName="MS-PL" Source="../../../Pages/Links/About/LicenseText/MS-PL.xaml"/>
                    <mui:Link DisplayName="Microsoft Proprietary" Source="../../../Pages/Links/About/LicenseText/MicrosoftProprietary.xaml"/>
                </mui:ModernTab.Links>
            </mui:ModernTab>
        </Grid>
    </Grid>
</UserControl>
